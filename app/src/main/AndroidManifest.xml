<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appacitive.khelkund"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <permission
        android:name="com.appacitive.khelkund.gcm.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.appacitive.khelkund.permission.C2D_MESSAGE" />

    <application
        android:name=".infra.KhelkundApplication"
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".activities.LoginActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appacitive.khelkund.activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.ViewTeamActivity"
            android:label="@string/title_activity_view_team"
            android:parentActivityName=".activities.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appacitive.khelkund.activities.HomeActivity" />
        </activity>
        <activity
            android:name=".activities.EditTeamActivity"
            android:label="@string/title_activity_edit_team"
            android:parentActivityName=".activities.ViewTeamActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appacitive.khelkund.activities.ViewTeamActivity" />
        </activity>
        <activity
            android:name=".activities.CreateTeamActivity"
            android:label="@string/title_activity_create_team"
            android:parentActivityName=".activities.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appacitive.khelkund.activities.HomeActivity" />
        </activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="2890d3d7e7948bff7abc0d2c5733a5ecabc8195e" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".activities.PlayerDetailsActivity"
            android:label="@string/title_activity_player_details"

            android:parentActivityName=".activities.EditTeamActivity"
            android:theme="@style/NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appacitive.khelkund.activities.EditTeamActivity" />
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <service
            android:name=".infra.services.FetchAllPlayersIntentService"
            android:exported="false" />

        <activity
            android:name=".activities.PlayerPoolActivity"
            android:label="@string/title_activity_player_pool"
            android:parentActivityName=".activities.EditTeamActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appacitive.khelkund.activities.EditTeamActivity" />
        </activity>

        <service
            android:name=".infra.services.FetchMyPLayersIntentService"
            android:exported="false" />

        <activity
            android:name=".activities.pick5.Pick5HomeActivity"
            android:label="@string/title_activity_pick5_home"
            android:parentActivityName=".activities.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appacitive.khelkund.activities.HomeActivity" />
        </activity>

        <service
            android:name=".infra.services.FetchAllPick5MatchesIntentService"
            android:exported="false" />

        <activity
            android:name=".activities.pick5.Pick5MatchActivity"
            android:label="@string/title_activity_pick5_match"
            android:theme="@style/NoActionBar"
            android:parentActivityName=".activities.pick5.Pick5HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appacitive.khelkund.activities.pick5.Pick5HomeActivity" />
        </activity>

        <receiver android:exported="true"
            android:name=".infra.services.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.appacitive.khelkund" />
            </intent-filter>
        </receiver>

        <service android:name=".infra.services.GcmIntentService" />

        <activity
            android:name=".activities.LeaderboardActivity"
            android:label="@string/title_activity_leaderboard"
            android:parentActivityName=".activities.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.appacitive.khelkund.activities.HomeActivity" />
        </activity>
    </application>

</manifest>
