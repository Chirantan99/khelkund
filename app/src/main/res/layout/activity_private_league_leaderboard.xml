<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/leaderboard"
    tools:context="com.appacitive.khelkund.activities.privateleague.PrivateLeagueLeaderboardActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@android:color/transparent"
        android:id="@+id/tv_private_league_leaderboard_header"
        android:text="LEADERBOARD"
        android:textColor="@android:color/white"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="33sp"
        android:typeface="serif"
        android:singleLine="true" />


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tv_private_league_leaderboard_header"
        android:id="@+id/rv_privateleague_leaderboard"
        android:background="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_icon="@drawable/abc_ic_menu_share_mtrl_alpha"
        fab:fab_colorNormal="@color/accent"
        fab:fab_colorPressed="#C2185B"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        />

</RelativeLayout>
