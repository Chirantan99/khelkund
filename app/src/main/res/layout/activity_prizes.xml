<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    tools:context="com.appacitive.khelkund.activities.navigationdrawer.PrizesActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FANTASY CRICKET"
            android:id="@+id/textView32"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="24sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_horizontal"
            android:layout_margin="16dp"
            android:textColor="@color/accent" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView32"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2"
            android:layout_margin="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="1st Prize"
                    android:id="@+id/textView33"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="22sp"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:id="@+id/imageView"
                    android:layout_below="@+id/textView33">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/tab"
                        android:scaleType="centerCrop" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samsung Galaxy Tab 3"
                    android:id="@+id/textView36"
                    android:layout_below="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:layout_margin="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="2nd Prize"
                    android:id="@+id/textView34"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_below="@+id/textView34"
                    android:id="@+id/imageView6"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/lumia" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nokia Lumia 535"
                    android:id="@+id/textView37"
                    android:layout_below="@+id/imageView6"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:layout_margin="8dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="3rd Prize"
                    android:id="@+id/textView35"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="20sp"
                    android:layout_margin="8dp"
                    android:gravity="center_vertical" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_below="@+id/textView35"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageView7">

                    <ImageView
                        android:layout_width="wrap_content"

                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/jersey" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Official Team Jersey of choice"
                    android:id="@+id/textView38"
                    android:layout_below="@+id/imageView7"
                    android:layout_centerHorizontal="true"
                    android:textSize="10sp"
                    android:layout_margin="8dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:id="@+id/relativeLayout8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PICK&apos;EM 5"
                android:id="@+id/textView40"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:textSize="24dp"
                android:textColor="@color/accent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazon Vouchers worth Rs. 2000 for all Pick’em 5 players winning 35 matches"
                android:id="@+id/textView41"
                android:layout_below="@+id/textView40"
                android:layout_margin="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazon Vouchers worth Rs. 1000 for all Pick’em 5 players winning 30 matches"
                android:id="@+id/textView42"
                android:layout_below="@+id/textView41"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignLeft="@+id/textView41"
                android:layout_alignStart="@+id/textView41" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amazon Vouchers worth Rs. 500 for all Pick’em 5 players winning 25 matches"
                android:id="@+id/textView43"
                android:layout_below="@+id/textView42"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignLeft="@+id/textView42"
                android:layout_alignStart="@+id/textView42" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khelkund T-shirts for all Pick’em five players winning 20 matches"
                android:id="@+id/textView44"
                android:layout_below="@+id/textView43"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_alignLeft="@+id/textView43"
                android:layout_alignStart="@+id/textView43" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PRIVATE LEAGUE"
            android:id="@+id/textView39"
            android:layout_below="@+id/relativeLayout8"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:textColor="@color/accent"
            android:layout_margin="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All members of the Private League with 15 or more users &amp; the highest average score will each receive 1 Khelkund T-shirt and Amazon voucher worth Rs. 500."
            android:id="@+id/textView45"
            android:layout_below="@+id/textView39"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView45"
            android:text="Terms &amp; Conditions apply"
            android:layout_marginTop="24dp"
            android:textSize="10sp"
            android:gravity="right"
             />
    </RelativeLayout>
</ScrollView>
