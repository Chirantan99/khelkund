<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_pick5"
    android:layout_width="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_height="200dp"
    app:cardCornerRadius="4dp"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_pick5_match"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23rd April, 2014"
            android:textSize="24sp"
            android:id="@+id/tv_pick5_date"
            android:layout_marginTop="22dp"
            android:textColor="@color/abc_primary_text_material_dark"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vs."
            android:textSize="24sp"
            android:id="@+id/tv_pick5_vs"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="52dp"
            android:textColor="@color/abc_primary_text_material_dark" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/iv_pick5_home_logo"
            android:src="@drawable/kxip"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="48dp"
            android:layout_marginLeft="36dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:id="@+id/iv_pick5_away_logo"
            android:src="@drawable/kkr"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:layout_marginRight="36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:id="@+id/tv_pick5_home_team_name"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="12sp"

            android:gravity="center_horizontal"
            android:layout_below="@+id/iv_pick5_home_logo"
            android:layout_alignRight="@+id/iv_pick5_home_logo"
            android:layout_alignEnd="@+id/iv_pick5_home_logo"
            android:layout_alignLeft="@+id/iv_pick5_home_logo"
            android:layout_alignStart="@+id/iv_pick5_home_logo"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AWAY"
            android:id="@+id/tv_pick5_away_team_name"
            android:textColor="@color/abc_primary_text_material_dark"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:layout_below="@+id/iv_pick5_away_logo"
            android:layout_alignLeft="@+id/iv_pick5_away_logo"
            android:layout_alignStart="@+id/iv_pick5_away_logo"
            android:layout_alignRight="@+id/iv_pick5_away_logo"
            android:layout_alignEnd="@+id/iv_pick5_away_logo"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue"
            android:id="@+id/tv_pick5_venue"
            android:layout_below="@+id/tv_pick5_date"
            android:layout_centerHorizontal="true"
            android:textColor="@color/abc_primary_text_material_dark" />

    </RelativeLayout>

</android.support.v7.widget.CardView>




