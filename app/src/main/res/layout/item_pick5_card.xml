<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:id="@+id/rl_pick5_match"
    android:layout_height="72dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23 Apr"
        android:textSize="22sp"
        android:id="@+id/tv_pick5_play_date"
        android:textColor="@color/abc_primary_text_material_light"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/card_view_pick5"
        android:layout_toStartOf="@+id/card_view_pick5"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fri 07:30 AM"
        android:id="@+id/tv_pick5_play_time"
        android:layout_below="@+id/tv_pick5_play_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/tv_pick5_play_date"
        android:layout_alignEnd="@+id/tv_pick5_play_date"
        android:gravity="center_horizontal"
        android:textSize="12sp" />

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_pick5"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="250dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#009688"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vs"
                android:textSize="18sp"
                android:id="@+id/tv_pick5_vs"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/abc_primary_text_material_dark" />

            <com.appacitive.khelkund.infra.widgets.CircleView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_pick5_home_logo"
                app:titleText="AA"
                app:subtitleText=""
                app:titleSize="12dp"
                app:subtitleSize="9dp"
                app:titleColor="@android:color/white"
                app:subtitleColor="@android:color/white"
                app:strokeColorValue="@android:color/white"
                app:backgroundColorValue="@android:color/transparent"
                app:fillColor="@android:color/white"
                app:fillRadius="0.9"
                android:layout_alignTop="@+id/iv_pick5_away_logo"
                android:layout_toLeftOf="@+id/tv_pick5_vs"
                android:layout_toStartOf="@+id/tv_pick5_vs"
                android:layout_marginRight="24dp" />

            <com.appacitive.khelkund.infra.widgets.CircleView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/iv_pick5_away_logo"

                app:titleText="AA"
                app:subtitleText=""
                app:titleSize="12dp"
                app:subtitleSize="9dp"
                app:titleColor="@android:color/white"
                app:subtitleColor="@android:color/white"
                app:strokeColorValue="@android:color/white"
                app:backgroundColorValue="@android:color/transparent"
                app:fillColor="@android:color/white"
                app:fillRadius="0.9"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_pick5_vs"
                android:layout_toEndOf="@+id/tv_pick5_vs"
                android:layout_marginLeft="24dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>