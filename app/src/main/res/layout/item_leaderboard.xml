<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_leaderboard"
    android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/iv_leaderboard_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/l3"
            android:layout_marginLeft="16dp"
            android:layout_alignBottom="@+id/tv_leaderboard_rank_label"
            android:layout_alignTop="@+id/tv_leaderboard_teamname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Name"
            android:id="@+id/tv_leaderboard_teamname"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="12dp"
            android:textSize="20dp"
            android:textColor="@color/abc_primary_text_material_light"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player name"
            android:id="@+id/tv_leaderboard_username"
            android:textSize="14dp"
            android:layout_below="@+id/tv_leaderboard_teamname"
            android:layout_alignLeft="@+id/tv_leaderboard_teamname"
            android:layout_alignStart="@+id/tv_leaderboard_teamname"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="sans-serif-light"
            android:id="@+id/tv_leaderboard_points"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:textSize="22sp"
            android:layout_alignBottom="@+id/iv_leaderboard_photo"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/tv_leaderboard_teamname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rank "
            android:id="@+id/tv_leaderboard_rank_label"
            android:layout_below="@+id/tv_leaderboard_username"
            android:layout_alignLeft="@+id/tv_leaderboard_username"
            android:layout_alignStart="@+id/tv_leaderboard_username"
            android:textSize="14dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123"
            android:id="@+id/tv_leaderboard_rank"
            android:layout_alignBottom="@+id/tv_leaderboard_rank_label"
            android:layout_toRightOf="@+id/tv_leaderboard_rank_label"
            android:layout_toEndOf="@+id/tv_leaderboard_rank_label"
            android:textSize="14dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>