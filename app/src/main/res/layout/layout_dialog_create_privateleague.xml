<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Private League"
        android:id="@+id/textView21"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:textColor="@color/primary_dark"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_private_league_create_name"
        android:hint="New Private League Name"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="CREATE"
        android:id="@+id/tv_create_league"
        android:layout_below="@+id/et_private_league_create_name"
        android:layout_alignRight="@+id/et_private_league_create_name"
        android:layout_alignEnd="@+id/et_private_league_create_name"
        android:textColor="@color/accent"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:paddingRight="8dp"
        android:paddingLeft="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="CANCEL"
        android:id="@+id/tv_createleague_cancel"
        android:layout_alignTop="@+id/tv_create_league"
        android:layout_toLeftOf="@+id/tv_create_league"
        android:layout_toStartOf="@+id/tv_create_league"
        android:layout_marginRight="8dp"
        android:textColor="@color/accent"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your own Private League and start inviting your friends to compete with. "
        android:id="@+id/textView29"
        android:layout_below="@+id/textView21"
        android:layout_alignLeft="@+id/et_private_league_create_name"
        android:layout_alignStart="@+id/et_private_league_create_name"
        android:layout_alignRight="@+id/et_private_league_create_name"
        android:layout_alignEnd="@+id/et_private_league_create_name" />
</RelativeLayout>