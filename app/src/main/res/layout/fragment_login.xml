<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.appacitive.khelkund.fragments.LoginFragment"
    android:gravity="center_vertical|center_horizontal">

    <com.digits.sdk.android.DigitsAuthButton
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        android:id="@+id/digits_login_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="4dp" />

    <com.facebook.login.widget.LoginButton
        xmlns:fb="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        android:id="@+id/facebook_login_button"
        android:layout_below="@+id/digits_login_button"
        android:layout_alignRight="@+id/digits_login_button"
        android:layout_alignEnd="@+id/digits_login_button"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_alignLeft="@+id/digits_login_button"
        android:layout_alignStart="@+id/digits_login_button" />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:scaleType="centerInside"
        android:id="@+id/twitter_login_button"
        android:layout_below="@+id/facebook_login_button"
        android:layout_alignRight="@+id/facebook_login_button"
        android:layout_alignEnd="@+id/facebook_login_button"
        android:layout_marginBottom="4dp"
        android:layout_alignLeft="@+id/facebook_login_button"
        android:layout_alignStart="@+id/facebook_login_button"
        android:layout_marginTop="4dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Sing Up with Email"
        android:id="@+id/btn_signup_email"
        android:layout_below="@+id/twitter_login_button"
        android:layout_alignLeft="@+id/twitter_login_button"
        android:layout_alignStart="@+id/twitter_login_button"
        android:layout_alignRight="@+id/twitter_login_button"
        android:layout_alignEnd="@+id/twitter_login_button"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_login_email"
        android:text="Already have an account? Sign in"
        android:layout_below="@+id/btn_signup_email"
        android:layout_alignLeft="@+id/btn_signup_email"
        android:layout_alignStart="@+id/btn_signup_email"
        android:layout_alignRight="@+id/btn_signup_email"
        android:layout_alignEnd="@+id/btn_signup_email"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white" />
</RelativeLayout>
